<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragList"
        android:name="org.coursera.sustainableapps.fragment_recyclerview_challenge.ListFragment"
        android:layout_width="211dp"
        android:layout_height="415dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_list" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="520dp"
        android:layout_height="414dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragList"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/fragBtn"
            android:name="org.coursera.sustainableapps.fragment_recyclerview_challenge.ButtonFragment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_button" />

        <fragment
            android:id="@+id/fragOwner"
            android:name="org.coursera.sustainableapps.fragment_recyclerview_challenge.OwnerInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragBtn"
            tools:layout="@layout/fragment_owner_info" />

        <fragment
            android:id="@+id/fragCar"
            android:name="org.coursera.sustainableapps.fragment_recyclerview_challenge.OwnerInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/fragOwner"
            app:layout_constraintEnd_toEndOf="@+id/fragOwner"
            app:layout_constraintStart_toStartOf="@+id/fragOwner"
            app:layout_constraintTop_toBottomOf="@+id/fragBtn"
            tools:layout="@layout/fragment_car_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>